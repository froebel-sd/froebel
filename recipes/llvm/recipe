pkgname="llvm"
source ./current_ver
pkgver="$_llvm_current_ver"
pkgrev="0"
maintainer="ky0ko <ky0ko@disroot.org>"
homepage="https://llvm.org/"
desc="llvm compiler runtime support library"
license="MIT/UIUC"
dependencies="netbsd-csu musl compiler-rt libcxxabi libcxx libcxxabi-headers libcxx-headers libunwind"
src="https://releases.llvm.org/${pkgver}/${pkgname}-${pkgver}.src.tar.xz"

builddir="$srcdir"/"$pkgname"-"$pkgver".src/build

do_build() {
    mkdir -p "$builddir"
    cd "$builddir"

    cmake \
        -DCMAKE_CROSSCOMPILING="ON" \
        -DCMAKE_SYSROOT="$FBUILD_SYSROOT" \
        -DCMAKE_INSTALL_PREFIX="/" \
        -DCMAKE_BUILD_TYPE="MinSizeRel" \
        -DCMAKE_C_COMPILER="$CC" \
        -DCMAKE_CXX_COMPILER="$CXX" \
        -DCMAKE_C_FLAGS_MINSIZEREL_INIT="$CFLAGS" \
        -DCMAKE_CXX_FLAGS_MINSIZEREL_INIT="$CXXFLAGS" \
        -DCMAKE_EXE_LINKER_FLAGS_MINSIZEREL_INIT="$LDFLAGS" \
        \
        -DLLVM_TABLEGEN="$(which llvm-tblgen)" \
        -DLLVM_DEFAULT_TARGET_TRIPLE="$TARGET_TRIPLE" \
        -DLLVM_TARGET_ARCH="$TARGET_ARCH" \
        -DLLVM_ENABLE_LIBCXX="ON" \
        -DLLVM_ENABLE_LLD="ON" \
        -DLLVM_ENABLE_LIBXML2="OFF" \
        -DLLVM_ENABLE_OCAMLDOC="OFF" \
        -DLLVM_ENABLE_BINDINGS="OFF" \
        -DLLVM_ENABLE_TERMINFO="OFF" \
        -DLLVM_INSTALL_BINUTILS_SYMLINKS="ON" \
        -DLLVM_TARGETS_TO_BUILD="X86" \
        ..

    make
}

do_test() {

}

do_install() {
    cd "$builddir"
    make DESTDIR="$pkgdir" install
}
